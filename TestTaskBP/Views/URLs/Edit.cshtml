@model VoroninTestTask.Models.URL

@{
    ViewData["Title"] = "Редактирование ссылки";
}

<h1>Редактирование ссылки</h1>

<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID"/>
            <div class="form-group">
                <label asp-for="FullUrl" class="control-label"></label>
                <input asp-for="FullUrl" class="form-control"/>
                <span asp-validation-for="FullUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShortUrl" class="control-label"></label>
                <input asp-for="ShortUrl" class="form-control" readonly/>
                <span asp-validation-for="ShortUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreateDate" class="control-label"></label>
                <input asp-for="CreateDate" class="form-control" readonly/>
                <span asp-validation-for="CreateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfTransitions" class="control-label"></label>
                <input asp-for="NumberOfTransitions" class="form-control" readonly/>
                <span asp-validation-for="NumberOfTransitions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}