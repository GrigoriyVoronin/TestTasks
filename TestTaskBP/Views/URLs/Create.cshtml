@model VoroninTestTask.Models.URL

@{
    ViewData["Title"] = "Сокращение ссылки";
}

<h1>Сокращение ссылки</h1>

<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FullUrl" class="control-label"></label>
                <input asp-for="FullUrl" class="form-control"/>
                <span asp-validation-for="FullUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сократить" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}